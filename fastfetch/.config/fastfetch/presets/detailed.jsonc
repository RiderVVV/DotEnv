{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "type": "auto",
    "padding": {
      "top": 2,
      "left": 3,
      "right": 3
    }
  },
  "display": {
    "separator": " │ ",
    "color": {
      "keys": "cyan",
      "output": "white",
      "separator": "blue"
    }
  },
  "modules": [
    {
      "type": "title",
      "format": "{user-name}@{host-name}",
      "key": " 👤 User",
      "keyColor": "cyan"
    },
    {
      "type": "separator",
      "string": "═══════════════════════════════════════"
    },
    {
      "type": "os",
      "key": " 💻 OS",
      "keyColor": "blue"
    },
    {
      "type": "host",
      "key": " 🖥️  Host",
      "keyColor": "blue"
    },
    {
      "type": "kernel",
      "key": " 🔧 Kernel",
      "keyColor": "blue"
    },
    {
      "type": "packages",
      "key": " 📦 Packages",
      "keyColor": "yellow"
    },
    {
      "type": "uptime",
      "key": " ⏱️  Uptime",
      "keyColor": "green"
    },
    {
      "type": "shell",
      "key": " 🐚 Shell",
      "keyColor": "yellow"
    },
    {
      "type": "terminal",
      "key": " 🖥️  Terminal",
      "keyColor": "magenta"
    },
    {
      "type": "terminalfont",
      "key": " 🔤 Font",
      "keyColor": "magenta"
    },
    {
      "type": "separator",
      "string": "───────────────────────────────────────"
    },
    {
      "type": "cpuusage",
      "key": " 🧠 CPU Usage",
      "keyColor": "red"
    },
    {
      "type": "gpu",
      "key": " 🎮 GPU",
      "keyColor": "red"
    },
    {
      "type": "memory",
      "key": " 💾 Memory",
      "keyColor": "green",
      "format": "{used} / {total} ({percent})"
    },
    {
      "type": "swap",
      "key": " 🔄 Swap",
      "keyColor": "green",
      "format": "{used} / {total} ({percent})"
    },
    {
      "type": "disk",
      "key": " 💿 Disk (/)",
      "keyColor": "yellow",
      "folders": "/",
      "format": "{used} / {total} ({percent}) - {filesystem}"
    },
    {
      "type": "separator",
      "string": "───────────────────────────────────────"
    },
    {
      "type": "localip",
      "key": " 🌐 Local IP",
      "keyColor": "cyan"
    },
    {
      "type": "publicip",
      "key": " 🌍 Public IP",
      "keyColor": "cyan",
      "timeout": 1000
    },
    {
      "type": "wifi",
      "key": " 📶 WiFi",
      "keyColor": "cyan"
    },
    {
      "type": "battery",
      "key": " 🔋 Battery",
      "keyColor": "green"
    },
    {
      "type": "separator",
      "string": "───────────────────────────────────────"
    },
    {
      "type": "datetime",
      "key": " 📅 Date",
      "keyColor": "blue",
      "format": "{year}-{month}-{day} {hour}:{minute}:{second}"
    },
    {
      "type": "locale",
      "key": " 🌏 Locale",
      "keyColor": "blue"
    },
    {
      "type": "colors",
      "symbol": "circle"
    }
  ]
}