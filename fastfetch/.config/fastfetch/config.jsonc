{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "type": "auto",
    "padding": {
      "top": 1,
      "left": 2
    }
  },
  "display": {
    "separator": " │ ",
    "color": {
      "keys": "cyan",
      "output": "white"
    }
  },
  "modules": [
    {
      "type": "title",
      "format": "{user-name}@{host-name}",
      "key": " 👤",
      "keyColor": "cyan"
    },
    {
      "type": "separator",
      "string": "─────────────────────"
    },
    {
      "type": "os",
      "key": " 💻",
      "keyColor": "blue"
    },
    {
      "type": "kernel",
      "key": " 🔧",
      "keyColor": "blue"
    },
    {
      "type": "uptime",
      "key": " ⏱️",
      "keyColor": "green"
    },
    {
      "type": "shell",
      "key": " 🐚",
      "keyColor": "yellow"
    },
    {
      "type": "terminal",
      "key": " 🖥️",
      "keyColor": "magenta"
    },
    {
      "type": "cpu",
      "key": " 🧠",
      "keyColor": "red",
      "showPeCoreCount": true,
      "temp": true
    },
    {
      "type": "memory",
      "key": " 💾",
      "keyColor": "green"
    },
    {
      "type": "disk",
      "key": " 💿",
      "keyColor": "yellow",
      "folders": "/"
    },
    {
      "type": "localip",
      "key": " 🌐",
      "keyColor": "cyan",
      "compact": true
    },
    {
      "type": "battery",
      "key": " 🔋",
      "keyColor": "green"
    }
  ]
}