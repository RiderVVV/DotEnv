{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  // 主题和外观
  "theme": {
    "mode": "dark",
    "dark": "One Dark Pro",
    "light": "One Dark Pro"
  },
  "icon_theme": "VSCode Icons (Dark)", // Zed 没有直接对应 vscode-icons，选择了一个类似的图标主题
  "features": {
    "edit_prediction_provider": "zed",
    "show_edit_predictions": true,
    "show_completions_on_input": true
  },
  "base_keymap": "JetBrains",

  // 编辑器设置
  "ui_font_size": 16,
  "buffer_font_size": 16,

  // 文件相关
  "auto_save": "on", // 对应 "files.autoSave": "afterDelay"

  // 工作区设置
  "restore_on_startup": "none", // 对应 "workbench.startupEditor": "none"

  // 编辑器行为
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  //软换行打开
  "soft_wrap": "editor_width",

  // Go 语言工具
  "languages": {
    "Go": {
      "language_server": {
        "provider": "gopls"
      }
    }
  },

  // 辅助功能
  "inlay_hints": {
    "enabled": true // 对应 "editor.accessibilitySupport": "off"
  },

  // 特殊设置
  "file_types": {
    // Unicode 字符允许
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/vendor",
    "**/.tmp*"
  ],
  "search.exclude": {
    "**/*.snap": true,
    "**/.git": true,
    "**/.github": false,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/temp": true,
    "**/yarn.lock": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true
  },
  "terminal": {
    "font_family": "Cascadia Code NF",
    "toolbar": {
      "title": false
    },
    "copy_on_select": true
  },
  "git": {
    "enabled": true,
    "autoFetch": true,
    "autoFetchInterval": 300,
    "autoFetchOnFocus": true,
    "autoFetchOnWindowChange": true,
    "autoFetchOnBuild": true,
    "git_status": true,
    "autoFetchOnBuildEvents": ["build", "run", "debug"],
    "autoFetchOnBuildEventsDelay": 1500,
    "autoFetchOnBuildDelay": 1500,
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false,
      "position": "right"
    }
  },

  // 项目路径 (可能需要通过其他方式配置)
  "project_paths": [
    "/Users/eric/Dropbox/Src/go/donson",
    "/Users/eric/Dropbox/Src/python",
    "/Users/eric/Documents/Cline/MCP"
  ]
}
